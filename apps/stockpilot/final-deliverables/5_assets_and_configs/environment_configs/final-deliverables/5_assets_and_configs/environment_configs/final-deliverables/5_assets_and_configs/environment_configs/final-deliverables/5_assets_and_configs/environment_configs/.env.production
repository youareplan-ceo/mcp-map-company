# StockPilot 프로덕션 환경 변수
# 실제 배포 시에는 보안을 위해 이 파일을 .gitignore에 추가하고 
# 실제 값들로 교체해야 합니다.

# 데이터베이스 설정
POSTGRES_DB=stockpilot_prod
POSTGRES_USER=stockpilot_user
POSTGRES_PASSWORD=change_this_strong_password_123!

# Redis 설정
REDIS_PASSWORD=change_this_redis_password_456!

# JWT 설정
JWT_SECRET_KEY=change_this_jwt_secret_key_very_long_and_secure_789!

# API 키들
OPENAI_API_KEY=sk-your-openai-api-key-here
POLYGON_API_KEY=your-polygon-api-key-here
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here

# Grafana 설정
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_this_grafana_password_abc!

# 환경 구분
ENVIRONMENT=production

# CORS 설정
CORS_ORIGINS=https://stockpilot.ai,https://www.stockpilot.ai

# 로그 레벨
LOG_LEVEL=INFO

# SSL/TLS 설정
SSL_CERT_PATH=/etc/nginx/ssl/stockpilot.ai.crt
SSL_KEY_PATH=/etc/nginx/ssl/stockpilot.ai.key

# 보안 설정
SECRET_KEY=change_this_secret_key_for_general_encryption_def!

# 백업 설정
BACKUP_SCHEDULE=0 2 * * *  # 매일 새벽 2시
BACKUP_RETENTION_DAYS=30

# 모니터링 설정
PROMETHEUS_RETENTION=200h
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_grafana_admin_password_ghi!

# 알림 설정 (Slack Webhook URL)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# 데이터 디렉토리 (호스트 경로)
DATA_DIR=/opt/stockpilot/data

# 로그 디렉토리
LOG_DIR=/opt/stockpilot/logs

# 네트워크 설정
SUBNET=172.20.0.0/16

# 서비스 포트 (내부용)
WEBSOCKET_PORT=8765
AUTH_API_PORT=8002
DASHBOARD_API_PORT=8003
POSTGRES_PORT=5432
REDIS_PORT=6379
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# 외부 노출 포트
HTTP_PORT=80
HTTPS_PORT=443

# 성능 설정
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65

# 헬스체크 설정
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# 레이트 리미팅 설정
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST=20

# 세션 설정
SESSION_TIMEOUT=3600  # 1시간
SESSION_REFRESH_THRESHOLD=1800  # 30분