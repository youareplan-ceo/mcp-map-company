# StockPilot AI Backend 환경변수 설정 예시
# 이 파일을 복사하여 .env 파일을 생성하고 실제 값으로 설정하세요

# 기본 설정
DEBUG=true
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS 설정
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:3001"]

# OpenAI API 키 (필수)
OPENAI_API_KEY=your_openai_api_key_here

# 데이터베이스 설정 (선택사항)
DATABASE_URL=postgresql://localhost/stockpilot

# Redis 설정 (선택사항)
REDIS_URL=redis://localhost:6379/0

# 로그 레벨
LOG_LEVEL=INFO

# 모델 라우팅 정책 v2 설정
MODEL_NANO=gpt-4o-mini-2024-07-18
MODEL_MINI=gpt-4o-mini
MODEL_GPT4=gpt-4-turbo-2024-04-09
MODEL_GPT5=gpt-4o
MODEL_O3=o1-preview

# 모델별 토큰 제한
TOKEN_LIMIT_NANO=512
TOKEN_LIMIT_MINI=1024
TOKEN_LIMIT_GPT4=2048
TOKEN_LIMIT_GPT5=4096
TOKEN_LIMIT_O3=8192

# 비용 관리 및 가드레일
DAILY_COST_LIMIT=50.0
MONTHLY_COST_LIMIT=1000.0
COST_ALERT_THRESHOLD=0.8

# 모델별 비용 설정 (USD per 1K tokens)
COST_NANO_INPUT=0.00015
COST_NANO_OUTPUT=0.0006
COST_MINI_INPUT=0.00015
COST_MINI_OUTPUT=0.0006
COST_GPT4_INPUT=0.01
COST_GPT4_OUTPUT=0.03
COST_GPT5_INPUT=0.005
COST_GPT5_OUTPUT=0.015
COST_O3_INPUT=0.015
COST_O3_OUTPUT=0.06

# 사용량 추적 설정
ENABLE_USAGE_TRACKING=true
USAGE_LOG_FILE=logs/openai_usage.log
USAGE_DATABASE_URL=

# 프로덕션 환경에서는 다음과 같이 설정
# DEBUG=false
# LOG_LEVEL=WARNING
# ALLOWED_ORIGINS=["https://your-frontend-domain.com"]
# DAILY_COST_LIMIT=100.0
# MONTHLY_COST_LIMIT=2000.0