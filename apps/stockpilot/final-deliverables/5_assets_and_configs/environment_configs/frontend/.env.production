# StockPilot AI 프로덕션 환경 설정
# 배포 전 모든 값을 실제 프로덕션 값으로 교체해야 함

# API 기본 설정
REACT_APP_API_BASE_URL=https://api.stockpilot.ai/api/v1
REACT_APP_WS_URL=wss://api.stockpilot.ai/ws

# 환경 식별
REACT_APP_ENV=production
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_DATE=2024-01-01

# 기능 플래그
REACT_APP_ENABLE_MONITORING=true
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# 외부 서비스 (필요시 설정)
REACT_APP_SENTRY_DSN=
REACT_APP_GOOGLE_ANALYTICS_ID=

# 보안 설정
REACT_APP_ENABLE_HTTPS_ONLY=true
REACT_APP_ENABLE_STRICT_CSP=true

# 성능 최적화
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false

# React Query 설정
REACT_APP_QUERY_STALE_TIME=300000
REACT_APP_QUERY_CACHE_TIME=600000

# 로깅 레벨 (error, warn, info, debug)
REACT_APP_LOG_LEVEL=error

# CORS 설정 (백엔드에서 처리하지만 참조용)
REACT_APP_CORS_ORIGINS=https://stockpilot.ai,https://www.stockpilot.ai

# 캐시 설정
REACT_APP_CACHE_MAX_AGE=86400

# 한국어 로케일 설정
REACT_APP_LOCALE=ko-KR
REACT_APP_TIMEZONE=Asia/Seoul