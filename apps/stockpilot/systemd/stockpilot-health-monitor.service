[Unit]
Description=StockPilot Health Monitor Daemon
Documentation=https://stockpilot.ai/docs/monitoring
After=network.target redis.service postgresql.service
Wants=redis.service postgresql.service
StartLimitIntervalSec=0

[Service]
Type=simple
User=stockpilot
Group=stockpilot
WorkingDirectory=/opt/stockpilot/backend
Environment=PATH=/opt/stockpilot/backend/venv/bin:/usr/local/bin:/usr/bin:/bin
Environment=PYTHONPATH=/opt/stockpilot/backend
Environment=LOG_LEVEL=INFO
EnvironmentFile=-/opt/stockpilot/.env.production
ExecStart=/opt/stockpilot/backend/venv/bin/python /opt/stockpilot/backend/health_monitor_daemon.py
ExecReload=/bin/kill -HUP $MAINPID
KillMode=mixed
KillSignal=SIGTERM
TimeoutStopSec=30
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=stockpilot-health

# 보안 강화 설정
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/stockpilot /tmp /opt/stockpilot/data
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true
RestrictRealtime=true
RestrictSUIDSGID=true
MemoryDenyWriteExecute=true
SystemCallFilter=@system-service
SystemCallErrorNumber=EPERM

# 리소스 제한
MemoryMax=512M
CPUQuota=50%
TasksMax=100

[Install]
WantedBy=multi-user.target