  // ÎìúÎ°úÏñ¥Í∞Ä Ïó¥Î¶¥ ÎïåÎèÑ Îã§Ïãú Ìïú Î≤à Î≥¥Ï†ï
  document.addEventListener('DOMContentLoaded', forceCashInputsAsText);
  document.addEventListener('click', function(){
    // Ïπ¥Îìú ÌÅ¥Î¶≠ÏúºÎ°ú ÎìúÎ°úÏñ¥ Ïó¥Î†∏ÏùÑ Îïå DOMÏù¥ Í∞±Ïã†ÎèºÎèÑ Î≥¥Ï†ïÎêòÎèÑÎ°ù Ïû¨Ìò∏Ï∂ú
