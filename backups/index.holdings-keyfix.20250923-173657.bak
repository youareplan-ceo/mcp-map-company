        // 포트폴리오 데이터 로드
        function loadPortfolioData() {
            portfolioHoldings = readHoldingsCompat();
            const storedCashKRW = localStorage.getItem('cashKRW');
            const storedCashUSD = localStorage.getItem('cashUSD');

            if (storedCashKRW) {
                cashKRW = parseFloat(storedCashKRW) || 0;
            }

            if (storedCashUSD) {
                cashUSD = parseFloat(storedCashUSD) || 0;
            }

            // 화면에 반영
            updatePortfolioDisplay();
            console.log('포트폴리오 데이터 로드됨:', { portfolioHoldings, cashKRW, cashUSD });
        }

        // 포트폴리오 화면 업데이트
        function updatePortfolioDisplay() {
            // 주식 평가금액 계산 (시세 데이터 사용)
            const stockValue = portfolioHoldings.reduce((total, holding) => {
                const currentPrice = stockPrices[holding.symbol] || holding.cost || 200; // 시세 또는 매입가 또는 기본값
                return total + (holding.qty * currentPrice);
            }, 0);

            // 상단 카드는 주식 평가액만 표시 (USD 기준)
            elements.totalAsset.textContent = '$' + stockValue.toLocaleString();

            // 현금 비율 계산
            const cashTotal = cashKRW / USD_KRW_RATE + cashUSD; // USD 기준으로 통합
            const totalAssets = stockValue + cashTotal;
            const cashRatioPercent = totalAssets > 0 ? ((cashTotal / totalAssets) * 100).toFixed(1) : 0;

            // 카드 업데이트
            elements.stockCount.textContent = portfolioHoldings.length;
            elements.cashRatio.textContent = cashRatioPercent + '%';
        }

