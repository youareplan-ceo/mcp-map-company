    <!-- C) 신호 드로어 -->
    <div class="drawer" id="drawer-signals">
        <div class="drawer-content">
            <div class="drawer-header">
                <h3>신호 요약</h3>
                <button class="drawer-close" onclick="closeDrawer('signals')">×</button>
            </div>
            <div class="drawer-body">
                <div id="signals-content">
                    <div class="loading-message">신호 데이터 로딩 중...</div>
                </div>
            </div>
        </div>
    </div>

    <!-- 드로어 배경 마스크 -->
    <div class="drawer-backdrop" id="drawer-backdrop" onclick="closeAllDrawers()"></div>

    <script>
        // 전역 변수 선언
        let currentSignals = [];
        let lastCheckTime = null;
        let checkInterval = null;
        let isConnected = false;
        let currentTradeType = 'buy'; // 현재 거래 타입 (buy/sell)
        let tradeHistory = []; // 거래 내역 배열
        let recommendations = []; // 추천 목록
        let userSettings = {}; // 사용자 설정
        let portfolioHoldings = []; // 포트폴리오 보유 종목
        let cashKRW = 0; // 보유 현금 (원화)
        let cashUSD = 0; // 보유 현금 (달러)
        let stockPrices = {}; // 시세 데이터 캐시
        let signalsData = []; // 신호 데이터
        const USD_KRW_RATE = 1350; // 환율 고정값

        // DOM 요소 매핑
        const elements = {
            totalAsset: document.getElementById('totalAsset'),
            profitAmount: document.getElementById('profitAmount'),
            profitPercentage: document.getElementById('profitPercentage'),
            stockCount: document.getElementById('stockCount'),
            cashRatio: document.getElementById('cashRatio'),
            monthlyReturn: document.getElementById('monthlyReturn'),
            riskLevel: document.getElementById('riskLevel'),
            statusText: document.getElementById('statusText'),
            nextCheck: document.getElementById('nextCheck'),
            actionCards: document.getElementById('actionCards'),
            loadingState: document.getElementById('loadingState'),
            recommendBadge: document.getElementById('recommendBadge'),
            connectionStatus: document.getElementById('connectionStatus'),
            tradeHistory: document.getElementById('tradeHistory'),
            recommendationList: document.getElementById('recommendationList'),
            stockSelect: document.getElementById('stockSelect'),
            quantityInput: document.getElementById('quantityInput'),
            priceInput: document.getElementById('priceInput'),
            executeBtn: document.getElementById('executeBtn')
        };

        // 앱 초기화
        document.addEventListener('DOMContentLoaded', function() {
            console.log('StockPilot AI 시작 - 4개 탭 버전');
            initializeApp();
        });

        // 앱 초기화 함수
        function initializeApp() {
            loadStoredData(); // localStorage에서 데이터 로드
            loadPortfolioData(); // 포트폴리오 데이터 로드
            initializeTradeHistory(); // 거래 내역 초기화
            initializeRecommendations(); // 추천 목록 초기화
            initializeSettings(); // 설정 초기화
            startPeriodicCheck(); // 5초마다 API 체크 시작
            updateConnectionStatus(true); // 연결 상태 표시
            checkFirstTimeUser(); // 최초 사용자 온보딩
        }

        // localStorage에서 저장된 데이터 로드
        function loadStoredData() {
            const storedData = localStorage.getItem('stockpilot-data');
            if (storedData) {
                const data = JSON.parse(storedData);

                // 자산 정보 업데이트
                if (data.asset) {
                    updateAssetInfo(data.asset);
                }

                // 거래 내역 로드
                if (data.tradeHistory) {
                    tradeHistory = data.tradeHistory;
                }

                // 추천 목록 로드
                if (data.recommendations) {
                    recommendations = data.recommendations;
                }

                // 사용자 설정 로드
                if (data.settings) {
                    userSettings = data.settings;
                }

                lastCheckTime = data.lastCheck;
                updateNextCheckTime();
            }
        }

        // 데이터를 localStorage에 저장
        function saveData(data) {
            const existingData = JSON.parse(localStorage.getItem('stockpilot-data') || '{}');
            const newData = {
                ...existingData,
                ...data,
                lastCheck: new Date().toISOString()
            };
            localStorage.setItem('stockpilot-data', JSON.stringify(newData));
            console.log('데이터 저장됨:', newData);
        }

        // 5초마다 백엔드 API 체크 시작
        function startPeriodicCheck() {
            if (checkInterval) {
                clearInterval(checkInterval);
            }

            checkSignals(); // 즉시 실행
            checkInterval = setInterval(checkSignals, 5000); // 5초마다 반복
        }

        // 백엔드에서 신호 체크
        async function checkSignals() {
            try {
                showLoading(true);
                updateConnectionStatus(true);

                const response = await fetch('https://mcp-map-company.onrender.com/api/v1/ai/signals', {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();
                console.log('신호 체크 완료:', data);

                processSignalData(data); // 신호 데이터 처리
                saveData({ signals: data }); // 데이터 저장

            } catch (error) {
                console.error('신호 체크 오류:', error);
                updateConnectionStatus(false);
                handleOfflineMode();
            } finally {
                showLoading(false);
                lastCheckTime = new Date();
                updateNextCheckTime();
            }
        }

        // 신호 데이터 처리
        function processSignalData(data) {
            // 자산 정보 업데이트
            if (data.portfolio) {
                updateAssetInfo(data.portfolio);
            }

            // 액션 신호가 있으면 홈 탭에 표시
            if (data.signals && data.signals.length > 0) {
                currentSignals = data.signals;
                displayActionCards(data.signals);
                updateStatus('중요 신호 발생! 아래 액션을 확인하세요', 'action');
            } else {
                currentSignals = [];
                clearActionCards();
                updateStatus('포트폴리오 양호, 그대로 유지', 'normal');
            }

            // 추천 데이터가 있으면 추천 탭 업데이트
            if (data.recommendations) {
                recommendations = data.recommendations;
                displayRecommendations();
                updateRecommendBadge(data.recommendations.length > 0);
            }
        }

        // 오프라인 모드 처리
        function handleOfflineMode() {
            updateStatus('연결 확인 중...', 'offline');
        }

        // 자산 정보 업데이트
        function updateAssetInfo(portfolio) {
            if (portfolio.totalValue) {
                elements.totalAsset.textContent = formatCurrency(portfolio.totalValue);
            }

            if (portfolio.profit !== undefined) {
                const isPositive = portfolio.profit >= 0;
                const profitClass = isPositive ? 'profit-positive' : 'profit-negative';

                elements.profitAmount.textContent = (isPositive ? '+' : '') + formatCurrency(Math.abs(portfolio.profit));
                elements.profitAmount.className = `profit-amount ${profitClass}`;

                if (portfolio.profitPercentage !== undefined) {
                    elements.profitPercentage.textContent = (isPositive ? '+' : '') + portfolio.profitPercentage.toFixed(1) + '%';
                    elements.profitPercentage.className = `profit-percentage ${profitClass}`;
                }
            }

            // 포트폴리오 요약 정보 업데이트
            if (portfolio.stockCount) elements.stockCount.textContent = portfolio.stockCount;
            if (portfolio.cashRatio) elements.cashRatio.textContent = portfolio.cashRatio + '%';
            if (portfolio.monthlyReturn) elements.monthlyReturn.textContent = portfolio.monthlyReturn + '%';
            if (portfolio.riskLevel) elements.riskLevel.textContent = portfolio.riskLevel;
        }

        // 액션 카드 표시 (홈 탭)
        function displayActionCards(signals) {
            elements.actionCards.innerHTML = '';

            signals.forEach((signal, index) => {
                const card = createActionCard(signal, index);
                elements.actionCards.appendChild(card);
            });
        }

        // 액션 카드 생성
        function createActionCard(signal, index) {
            const card = document.createElement('div');
            card.className = `action-card ${signal.action} show`;

            const actionTypeText = signal.action === 'buy' ? 'AI 분석 점수' : '기술적 신호';

            card.innerHTML = `
                <div class="action-type">${actionTypeText}</div>
                <div class="action-title">${signal.symbol} ${signal.message}</div>
                <div class="action-description">${signal.description || ''}</div>
                <button class="action-button" onclick="executeAction(${index})">
                    실행하기
                </button>
            `;

            return card;
        }

        // 액션 카드 제거
        function clearActionCards() {
            elements.actionCards.innerHTML = '';
        }

        // 액션 실행 (홈 탭에서)
        function executeAction(signalIndex) {
            const signal = currentSignals[signalIndex];
            if (!signal) return;

            const confirmed = confirm(`${signal.symbol} ${signal.action === 'buy' ? '분석' : '신호'} 정보를 확인하시겠습니까?`);

            if (confirmed) {
                console.log('액션 실행:', signal);

                // 거래 내역에 추가
                addToTradeHistory({
                    symbol: signal.symbol,
                    type: signal.action,
                    quantity: signal.quantity || 1,
                    price: signal.price || 100,
                    date: new Date()
                });

                alert('주문이 접수되었습니다.');

