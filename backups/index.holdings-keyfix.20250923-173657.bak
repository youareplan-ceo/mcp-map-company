        // 거래 내역에 새로운 거래 추가
        function addToTradeHistory(trade) {
            // 간단한 손익 계산 (실제로는 더 복잡한 로직 필요)
            trade.profit = Math.random() > 0.5 ? Math.floor(Math.random() * 500) : -Math.floor(Math.random() * 300);

            tradeHistory.unshift(trade); // 맨 앞에 추가 (최신순)
