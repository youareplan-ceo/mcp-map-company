        // 보유종목 드로어 로드
        function loadHoldingsDrawer() {
            const tbody = document.getElementById('holdings-table-body');
            tbody.innerHTML = '';

            const holdings = readHoldingsCompat();
            holdings.forEach((holding, index) => {
                addHoldingRowToTable(holding, index);
