        // 거래 실행
        function executeTrade() {
            const symbol = elements.stockSelect.value;
            const quantity = parseInt(elements.quantityInput.value);
            const price = parseFloat(elements.priceInput.value);

            // 입력값 검증
            if (!symbol) {
                alert('종목을 선택해주세요.');
                return;
            }

            if (!quantity || quantity <= 0) {
                alert('올바른 수량을 입력해주세요.');
                return;
            }

            if (!price || price <= 0) {
                alert('올바른 가격을 입력해주세요.');
                return;
            }

            const confirmed = confirm(`${symbol} ${quantity}주에 대한 $${price} 기준 분석을 ${currentTradeType === 'buy' ? '확인' : '검토'}하시겠습니까?`);

            if (confirmed) {
                // 거래 내역에 추가
                addToTradeHistory({
                    symbol: symbol,
                    type: currentTradeType,
                    quantity: quantity,
                    price: price,
                    date: new Date()
                });

                // 입력 필드 초기화
                elements.stockSelect.value = '';
                elements.quantityInput.value = '';
                elements.priceInput.value = '';

                alert('주문이 접수되었습니다.');
                console.log('거래 실행 완료');
            }
        }

