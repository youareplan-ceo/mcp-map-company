                cashUSD = parseFloat(storedCashUSD) || 0;
            }

            // ÌôîÎ©¥Ïóê Î∞òÏòÅ
            updatePortfolioDisplay();
            console.log('Ìè¨Ìä∏Ìè¥Î¶¨Ïò§ Îç∞Ïù¥ÌÑ∞ Î°úÎìúÎê®:', { portfolioHoldings, cashKRW, cashUSD });
        }

        // Ìè¨Ìä∏Ìè¥Î¶¨Ïò§ ÌôîÎ©¥ ÏóÖÎç∞Ïù¥Ìä∏
        function updatePortfolioDisplay() {
            // Ï£ºÏãù ÌèâÍ∞ÄÍ∏àÏï° Í≥ÑÏÇ∞ (ÏãúÏÑ∏ Îç∞Ïù¥ÌÑ∞ ÏÇ¨Ïö©)
            const stockValue = portfolioHoldings.reduce((total, holding) => {
                const currentPrice = stockPrices[holding.symbol] || holding.cost || 200; // ÏãúÏÑ∏ ÎòêÎäî Îß§ÏûÖÍ∞Ä ÎòêÎäî Í∏∞Î≥∏Í∞í
                return total + (holding.qty * currentPrice);
            }, 0);

            // ÏÉÅÎã® Ïπ¥ÎìúÎäî Ï£ºÏãù ÌèâÍ∞ÄÏï°Îßå ÌëúÏãú (USD Í∏∞Ï§Ä)
            elements.totalAsset.textContent = '$' + stockValue.toLocaleString();

            // ÌòÑÍ∏à ÎπÑÏú® Í≥ÑÏÇ∞
            const cashTotal = cashKRW / USD_KRW_RATE + cashUSD; // USD Í∏∞Ï§ÄÏúºÎ°ú ÌÜµÌï©
            const totalAssets = stockValue + cashTotal;
            const cashRatioPercent = totalAssets > 0 ? ((cashTotal / totalAssets) * 100).toFixed(1) : 0;

            // Ïπ¥Îìú ÏóÖÎç∞Ïù¥Ìä∏
            elements.stockCount.textContent = portfolioHoldings.length;
            elements.cashRatio.textContent = cashRatioPercent + '%';
        }

        // ÏµúÏ¥à ÏÇ¨Ïö©Ïûê ÌôïÏù∏ Î∞è Ïò®Î≥¥Îî©
        function checkFirstTimeUser() {
            if (!portfolioHoldings || portfolioHoldings.length === 0) {
                // 2Ï¥à ÌõÑ Î≥¥Ïú†Ï¢ÖÎ™© ÎìúÎ°úÏñ¥ ÏûêÎèô Ïò§Ìîà
                setTimeout(() => {
                    openDrawer('holdings');
                }, 2000);
            }
        }

        // Ìè¨Ìä∏Ìè¥Î¶¨Ïò§ Î™®Îã¨ Ïó¥Í∏∞
        function openPortfolioModal() {
            const modal = document.getElementById('portfolio-modal');
            modal.classList.add('show');

            // ÌòÑÏû¨ Îç∞Ïù¥ÌÑ∞Î°ú ÌÖåÏù¥Î∏î Ï±ÑÏö∞Í∏∞
            populatePortfolioTable();

            // ÎìúÎ°úÏñ¥ ÏãúÏä§ÌÖúÏúºÎ°ú ÎåÄÏ≤¥Îê®
        }

        // Ìè¨Ìä∏Ìè¥Î¶¨Ïò§ Î™®Îã¨ Îã´Í∏∞
        function closePortfolioModal() {
            const modal = document.getElementById('portfolio-modal');
            modal.classList.remove('show');
        }

        // Ìè¨Ìä∏Ìè¥Î¶¨Ïò§ ÌÖåÏù¥Î∏î Ï±ÑÏö∞Í∏∞
        function populatePortfolioTable() {
            const tbody = document.getElementById('portfolio-table-body');
            tbody.innerHTML = '';

            // Í∏∞Ï°¥ Î≥¥Ïú† Ï¢ÖÎ™© Ï∂îÍ∞Ä
            portfolioHoldings.forEach((holding, index) => {
                addPortfolioRow(holding, index);
            });

            // Îπà Ìñâ ÌïòÎÇò Ï∂îÍ∞Ä
            if (portfolioHoldings.length === 0) {
                addPortfolioRow();
            }
        }

        // Ìè¨Ìä∏Ìè¥Î¶¨Ïò§ Ìñâ Ï∂îÍ∞Ä
        function addPortfolioRow(holding = null, index = null) {
            const tbody = document.getElementById('portfolio-table-body');
            const row = document.createElement('tr');

            const symbol = holding ? holding.symbol : '';
            const qty = holding ? holding.qty : '';
            const cost = holding ? holding.cost : '';

            row.innerHTML = `
                <td><input type="text" placeholder="AAPL" value="${symbol}" style="text-transform: uppercase;"></td>
                <td><input type="number" placeholder="10" value="${qty}" step="1" min="0"></td>
                <td><input type="number" placeholder="185.3" value="${cost}" step="0.01" min="0"></td>
                <td><button onclick="removePortfolioRow(this)" class="portfolio-row-btn">√ó</button></td>
            `;

            tbody.appendChild(row);
        }

        // Ìè¨Ìä∏Ìè¥Î¶¨Ïò§ Ìñâ ÏÇ≠Ï†ú
        function removePortfolioRow(button) {
            const row = button.closest('tr');
            row.remove();
        }

        // ÏùºÍ¥Ñ Î∂ôÏó¨ÎÑ£Í∏∞ Ï≤òÎ¶¨
        function parseBulkPaste() {
            const textarea = document.getElementById('portfolio-bulk-paste');
            const text = textarea.value.trim();

            if (!text) return;

            const lines = text.split('\n');
            const tbody = document.getElementById('portfolio-table-body');
            tbody.innerHTML = ''; // Í∏∞Ï°¥ ÌÖåÏù¥Î∏î ÌÅ¥Î¶¨Ïñ¥

            lines.forEach(line => {
                const parts = line.split(',').map(p => p.trim());
                if (parts.length >= 3) {
                    const holding = {
                        symbol: parts[0].toUpperCase(),
                        qty: parseFloat(parts[1]) || 0,
                        cost: parseFloat(parts[2]) || 0
                    };
                    addPortfolioRow(holding);
                }
            });

            // Îπà Ìñâ ÌïòÎÇò Ï∂îÍ∞Ä
            addPortfolioRow();

            textarea.value = '';
        }

        // Í∏∞Ï°¥ savePortfolio Ìï®ÏàòÎäî ÎìúÎ°úÏñ¥ ÏãúÏä§ÌÖúÏúºÎ°ú ÎåÄÏ≤¥Îê®

        // ÎìúÎ°úÏñ¥ Í¥ÄÎ†® Ìï®ÏàòÎì§

        // ÎìúÎ°úÏñ¥ Ïó¥Í∏∞
        function openDrawer(type) {
            closeAllDrawers(); // Îã§Î•∏ ÎìúÎ°úÏñ¥ Îã´Í∏∞

            const drawer = document.getElementById(`drawer-${type}`);
            const backdrop = document.getElementById('drawer-backdrop');

            if (drawer) {
                drawer.classList.add('open');
                backdrop.classList.add('active');

                // ÎìúÎ°úÏñ¥Î≥Ñ Ï¥àÍ∏∞Ìôî
                if (type === 'holdings') {
                    loadHoldingsDrawer();
                } else if (type === 'cash') {
                    loadCashDrawer();
                } else if (type === 'signals') {
                    loadSignalsDrawer();
                }
            }
        }

        // ÎìúÎ°úÏñ¥ Îã´Í∏∞
        function closeDrawer(type) {
            const drawer = document.getElementById(`drawer-${type}`);
            if (drawer) {
                drawer.classList.remove('open');
            }
            checkBackdrop();
        }

        // Î™®Îì† ÎìúÎ°úÏñ¥ Îã´Í∏∞
        function closeAllDrawers() {
            const drawers = document.querySelectorAll('.drawer');
            drawers.forEach(drawer => drawer.classList.remove('open'));
            document.getElementById('drawer-backdrop').classList.remove('active');
        }

        // Î∞∞Í≤Ω ÎßàÏä§ÌÅ¨ Ï≤¥ÌÅ¨
        function checkBackdrop() {
            const openDrawers = document.querySelectorAll('.drawer.open');
            const backdrop = document.getElementById('drawer-backdrop');
            if (openDrawers.length === 0) {
                backdrop.classList.remove('active');
            }
        }

        // Î≥¥Ïú†Ï¢ÖÎ™© ÎìúÎ°úÏñ¥ Î°úÎìú
        function loadHoldingsDrawer() {
            const tbody = document.getElementById('holdings-table-body');
            tbody.innerHTML = '';

            const holdings = readHoldingsCompat();
            holdings.forEach((holding, index) => {
                addHoldingRowToTable(holding, index);
            });

            // Îπà Ìñâ Ï∂îÍ∞Ä
            if (holdings.length === 0) {
                addHoldingRowToTable();
            }
        }

        // Î≥¥Ïú†Ï¢ÖÎ™© Ìñâ Ï∂îÍ∞Ä
        function addHoldingRow() {
            addHoldingRowToTable();
        }

        function addHoldingRowToTable(holding = null, index = null) {
            const tbody = document.getElementById('holdings-table-body');
            const row = document.createElement('tr');

            const symbol = holding ? holding.symbol : '';
            const qty = holding ? holding.qty : '';
            const cost = holding ? holding.cost : '';

            row.innerHTML = `
                <td><input type="text" placeholder="AAPL" value="${symbol}" style="text-transform: uppercase;"></td>
                <td><input type="number" placeholder="10" value="${qty}" step="1" min="0"></td>
                <td><input type="number" placeholder="185.3" value="${cost}" step="0.01" min="0"></td>
                <td><button onclick="removeHoldingRow(this)" class="delete-btn">√ó</button></td>
            `;

            tbody.appendChild(row);
        }

        // Î≥¥Ïú†Ï¢ÖÎ™© Ìñâ ÏÇ≠Ï†ú
        function removeHoldingRow(button) {
            const row = button.closest('tr');
            row.remove();
        }

        // Î≥¥Ïú†Ï¢ÖÎ™© Ï†ÄÏû•
        function saveHoldings() {
            const rows = document.querySelectorAll('#holdings-table-body tr');
            const newHoldings = [];

            rows.forEach(row => {
                const inputs = row.querySelectorAll('input');
                const symbol = inputs[0].value.trim().toUpperCase();
                const qty = parseFloat(inputs[1].value) || 0;
                const cost = parseFloat(inputs[2].value) || 0;

                if (symbol && qty > 0 && cost > 0) {
                    if (!/^[A-Z]+$/.test(symbol)) {
                        alert(`ÏûòÎ™ªÎêú Ìã∞Ïª§ ÌòïÏãù: ${symbol}`);
                        return;
                    }
                    newHoldings.push({ symbol, qty, cost });
                }
            });

            portfolioHoldings = newHoldings;
            writeHoldingsCompat(newHoldings);
            console.log('Î≥¥Ïú†Ï¢ÖÎ™© Ï†ÄÏû•Îê®:', portfolioHoldings);

            // ÏÑúÎ≤Ñ ÎèôÍ∏∞Ìôî
            syncToServer();

            // ÌôîÎ©¥ ÏóÖÎç∞Ïù¥Ìä∏
            updatePortfolioDisplay();
            fetchStockPrices(); // ÏãúÏÑ∏ ÏóÖÎç∞Ïù¥Ìä∏

            closeDrawer('holdings');
            alert('Î≥¥Ïú†Ï¢ÖÎ™©Ïù¥ Ï†ÄÏû•ÎêòÏóàÏäµÎãàÎã§.');
        }

        // ÌòÑÍ∏à ÎìúÎ°úÏñ¥ Î°úÎìú
        function loadCashDrawer() {
            document.getElementById('cash-krw').value = cashKRW || '';
            document.getElementById('cash-usd').value = cashUSD || '';
        }

        // ÌòÑÍ∏à Ï†ÄÏû•
        function saveCash() {
            const newCashKRW = parseFloat(document.getElementById('cash-krw').value) || 0;
            const newCashUSD = parseFloat(document.getElementById('cash-usd').value) || 0;

            if (newCashKRW < 0 || newCashUSD < 0) {
                alert('ÌòÑÍ∏àÏùÄ ÏùåÏàòÍ∞Ä Îê† Ïàò ÏóÜÏäµÎãàÎã§.');
                return;
            }

            cashKRW = newCashKRW;
            cashUSD = newCashUSD;

            localStorage.setItem('cashKrw', cashKRW.toString());
            localStorage.setItem('cashUsd', cashUSD.toString());
            console.log('ÌòÑÍ∏à Ï†ÄÏû•Îê®:', { cashKRW, cashUSD });

            // ÏÑúÎ≤Ñ ÎèôÍ∏∞Ìôî
            syncToServer();

            // ÌôîÎ©¥ ÏóÖÎç∞Ïù¥Ìä∏
            updatePortfolioDisplay();

            closeDrawer('cash');
            alert('ÌòÑÍ∏à Ï†ïÎ≥¥Í∞Ä Ï†ÄÏû•ÎêòÏóàÏäµÎãàÎã§.');
        }

        // Ïã†Ìò∏ ÎìúÎ°úÏñ¥ Î°úÎìú
        function loadSignalsDrawer() {
            const content = document.getElementById('signals-content');
            content.innerHTML = '<div class="loading-message">Ïã†Ìò∏ Îç∞Ïù¥ÌÑ∞ Î°úÎî© Ï§ë...</div>';

            fetchSignalsData();
        }

        // ÏãúÏÑ∏ Îç∞Ïù¥ÌÑ∞ Í∞ÄÏ†∏Ïò§Í∏∞
        function fetchStockPrices() {
            if (portfolioHoldings.length === 0) return;

            const tickers = portfolioHoldings.map(h => h.symbol).join(',');
            const API_BASE = window.API_BASE || '';

            fetch(`${API_BASE}/api/v1/quote?tickers=${tickers}`)
                .then(response => response.json())
                .then(data => {
                    if (data && Array.isArray(data)) {
                        data.forEach(item => {
                            if (item.symbol && item.price) {
                                stockPrices[item.symbol] = item.price;
                            }
                        });
                        updatePortfolioDisplay();
                    }
                })
                .catch(error => {
                    console.warn('ÏãúÏÑ∏ Îç∞Ïù¥ÌÑ∞ Î°úÎìú Ïã§Ìå®:', error);
                });
        }

        // Ïã†Ìò∏ Îç∞Ïù¥ÌÑ∞ Í∞ÄÏ†∏Ïò§Í∏∞
        function fetchSignalsData() {
            const API_BASE = window.API_BASE || '';

            fetch(`${API_BASE}/api/v1/recommend`)
                .then(response => response.json())
                .then(data => {
                    signalsData = data || [];
                    displaySignalsData();
                    updateSignalsSummary();
                })
                .catch(error => {
                    console.warn('Ïã†Ìò∏ Îç∞Ïù¥ÌÑ∞ Î°úÎìú Ïã§Ìå®:', error);
                    document.getElementById('signals-content').innerHTML =
                        '<div class="loading-message">Îç∞Ïù¥ÌÑ∞Î•º Î∂àÎü¨Ïò¨ Ïàò ÏóÜÏäµÎãàÎã§.</div>';
                });
        }

        // Ïã†Ìò∏ Îç∞Ïù¥ÌÑ∞ ÌëúÏãú
        function displaySignalsData() {
            const content = document.getElementById('signals-content');

            if (signalsData.length === 0) {
                content.innerHTML = '<div class="loading-message">Ïã†Ìò∏ Îç∞Ïù¥ÌÑ∞Í∞Ä ÏóÜÏäµÎãàÎã§.</div>';
                return;
            }

            const signalsHtml = signalsData.map(signal => `
                <div class="signal-item">
                    <div class="signal-header">
                        <div class="signal-symbol">${signal.symbol || 'N/A'}</div>
                        <div class="signal-type ${(signal.action || 'hold').toLowerCase()}">${signal.action || 'Î≥¥Ïú†'}</div>
                    </div>
                    <div style="color: #8b9dc3; font-size: 14px;">
                        ${signal.reason || 'Ï†ïÎ≥¥ ÏóÜÏùå'}
                    </div>
                    ${signal.priceLevels ? `
                        <div style="margin-top: 10px; font-size: 12px; color: #4a9eff;">
                            Îß§Ïàò‚â§$${signal.priceLevels.buy} / Îß§ÎèÑ‚â•$${signal.priceLevels.sell}
                        </div>
                    ` : ''}
                </div>
            `).join('');

            content.innerHTML = `<div class="signals-list">${signalsHtml}</div>`;
        }

        // Ïã†Ìò∏ ÏöîÏïΩ ÏóÖÎç∞Ïù¥Ìä∏
        function updateSignalsSummary() {
            const buys = signalsData.filter(s => s.action === 'buy').length;
            const holds = signalsData.filter(s => s.action === 'hold').length;
            const sells = signalsData.filter(s => s.action === 'sell').length;

            if (buys + holds + sells > 0) {
                elements.riskLevel.textContent = `Îß§Ïàò${buys} Î≥¥Ïú†${holds} Îß§ÎèÑ${sells}`;
            } else {
                elements.riskLevel.textContent = 'Îç∞Ïù¥ÌÑ∞ ÏóÜÏùå';
            }
        }

        // ÏÑúÎ≤Ñ ÎèôÍ∏∞Ìôî
        function syncToServer() {
            const API_BASE = window.API_BASE || '';
            if (!API_BASE && window.location.hostname === 'localhost') return;

            fetch(`${API_BASE}/api/v1/portfolio`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    holdings: portfolioHoldings,
                    cashKRW,
                    cashUSD
                })
            }).catch(error => {
                console.warn('ÏÑúÎ≤Ñ ÎèôÍ∏∞Ìôî Ïã§Ìå®:', error);
            });
        }

        // Í∏∞Ï°¥ localStorage ÌÇ§ ÎßàÏù¥Í∑∏Î†àÏù¥ÏÖò
        function migrateOldData() {
            // Í∏∞Ï°¥ cashKRW/cashUSD ÌÇ§ Ï≤¥ÌÅ¨
            const oldCashKRW = localStorage.getItem('cashKRW');
            const oldCashUSD = localStorage.getItem('cashUSD');

            if (oldCashKRW && !localStorage.getItem('cashKrw')) {
                localStorage.setItem('cashKrw', oldCashKRW);
                localStorage.removeItem('cashKRW');
            }

            if (oldCashUSD && !localStorage.getItem('cashUsd')) {
                localStorage.setItem('cashUsd', oldCashUSD);
                localStorage.removeItem('cashUSD');
            }
        }

        // Îç∞Ïù¥ÌÑ∞ Î°úÎìú ÏàòÏ†ï
        // ÎåÄÏ≤¥Îêú loadPortfolioData Ìï®ÏàòÎäî ÏúÑÏóê Ïù¥ÎØ∏ Ï†ïÏùòÎê®

        // 1Ï¥àÎßàÎã§ Îã§Ïùå Ï≤¥ÌÅ¨ ÏãúÍ∞Ñ ÏóÖÎç∞Ïù¥Ìä∏
        setInterval(updateNextCheckTime, 1000);
    </script>
