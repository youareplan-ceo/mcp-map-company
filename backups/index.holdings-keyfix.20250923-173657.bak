        }

        function addHoldingRowToTable(holding = null, index = null) {
            const tbody = document.getElementById('holdings-table-body');
            const row = document.createElement('tr');

            const symbol = holding ? holding.symbol : '';
            const qty = holding ? holding.qty : '';
            const cost = holding ? holding.cost : '';

            row.innerHTML = `
                <td><input type="text" placeholder="AAPL" value="${symbol}" style="text-transform: uppercase;"></td>
                <td><input type="number" placeholder="10" value="${qty}" step="1" min="0"></td>
                <td><input type="number" placeholder="185.3" value="${cost}" step="0.01" min="0"></td>
                <td><button onclick="removeHoldingRow(this)" class="delete-btn">×</button></td>
            `;

            tbody.appendChild(row);
        }

        // 보유종목 행 삭제
        function removeHoldingRow(button) {
            const row = button.closest('tr');
            row.remove();
        }

        // 보유종목 저장
        function saveHoldings() {
            const rows = document.querySelectorAll('#holdings-table-body tr');
            const newHoldings = [];

            rows.forEach(row => {
                const inputs = row.querySelectorAll('input');
                const symbol = inputs[0].value.trim().toUpperCase();
                const qty = parseFloat(inputs[1].value) || 0;
                const cost = parseFloat(inputs[2].value) || 0;

                if (symbol && qty > 0 && cost > 0) {
                    if (!/^[A-Z]+$/.test(symbol)) {
                        alert(`잘못된 티커 형식: ${symbol}`);
                        return;
                    }
                    newHoldings.push({ symbol, qty, cost });
                }
            });

            portfolioHoldings = newHoldings;
            writeHoldingsCompat(newHoldings);
            console.log('보유종목 저장됨:', portfolioHoldings);

            // 서버 동기화
            syncToServer();

            // 화면 업데이트
            updatePortfolioDisplay();
            fetchStockPrices(); // 시세 업데이트

            closeDrawer('holdings');
            alert('보유종목이 저장되었습니다.');
        }

        // 현금 드로어 로드
        function loadCashDrawer() {
            document.getElementById('cash-krw').value = cashKRW || '';
            document.getElementById('cash-usd').value = cashUSD || '';
        }

        // 현금 저장
        function saveCash() {
            const newCashKRW = parseFloat(document.getElementById('cash-krw').value) || 0;
            const newCashUSD = parseFloat(document.getElementById('cash-usd').value) || 0;

            if (newCashKRW < 0 || newCashUSD < 0) {
                alert('현금은 음수가 될 수 없습니다.');
                return;
            }

            cashKRW = newCashKRW;
            cashUSD = newCashUSD;

            localStorage.setItem('cashKrw', cashKRW.toString());
            localStorage.setItem('cashUsd', cashUSD.toString());
            console.log('현금 저장됨:', { cashKRW, cashUSD });

            // 서버 동기화
            syncToServer();

            // 화면 업데이트
            updatePortfolioDisplay();

            closeDrawer('cash');
            alert('현금 정보가 저장되었습니다.');
        }

        // 신호 드로어 로드
        function loadSignalsDrawer() {
            const content = document.getElementById('signals-content');
            content.innerHTML = '<div class="loading-message">신호 데이터 로딩 중...</div>';

            fetchSignalsData();
        }

        // 시세 데이터 가져오기
        function fetchStockPrices() {
            if (portfolioHoldings.length === 0) return;

            const tickers = portfolioHoldings.map(h => h.symbol).join(',');
            const API_BASE = window.API_BASE || '';

            fetch(`${API_BASE}/api/v1/quote?tickers=${tickers}`)
                .then(response => response.json())
                .then(data => {
                    if (data && Array.isArray(data)) {
                        data.forEach(item => {
                            if (item.symbol && item.price) {
                                stockPrices[item.symbol] = item.price;
                            }
                        });
                        updatePortfolioDisplay();
                    }
                })
                .catch(error => {
                    console.warn('시세 데이터 로드 실패:', error);
                });
        }

        // 신호 데이터 가져오기
        function fetchSignalsData() {
            const API_BASE = window.API_BASE || '';

            fetch(`${API_BASE}/api/v1/recommend`)
                .then(response => response.json())
                .then(data => {
                    signalsData = data || [];
                    displaySignalsData();
                    updateSignalsSummary();
                })
                .catch(error => {
                    console.warn('신호 데이터 로드 실패:', error);
                    document.getElementById('signals-content').innerHTML =
                        '<div class="loading-message">데이터를 불러올 수 없습니다.</div>';
                });
        }

        // 신호 데이터 표시
        function displaySignalsData() {
            const content = document.getElementById('signals-content');

            if (signalsData.length === 0) {
                content.innerHTML = '<div class="loading-message">신호 데이터가 없습니다.</div>';
                return;
            }

            const signalsHtml = signalsData.map(signal => `
                <div class="signal-item">
                    <div class="signal-header">
                        <div class="signal-symbol">${signal.symbol || 'N/A'}</div>
                        <div class="signal-type ${(signal.action || 'hold').toLowerCase()}">${signal.action || '보유'}</div>
                    </div>
                    <div style="color: #8b9dc3; font-size: 14px;">
                        ${signal.reason || '정보 없음'}
                    </div>
                    ${signal.priceLevels ? `
                        <div style="margin-top: 10px; font-size: 12px; color: #4a9eff;">
                            매수≤$${signal.priceLevels.buy} / 매도≥$${signal.priceLevels.sell}
                        </div>
                    ` : ''}
                </div>
            `).join('');

            content.innerHTML = `<div class="signals-list">${signalsHtml}</div>`;
        }

        // 신호 요약 업데이트
        function updateSignalsSummary() {
            const buys = signalsData.filter(s => s.action === 'buy').length;
            const holds = signalsData.filter(s => s.action === 'hold').length;
            const sells = signalsData.filter(s => s.action === 'sell').length;

            if (buys + holds + sells > 0) {
                elements.riskLevel.textContent = `매수${buys} 보유${holds} 매도${sells}`;
            } else {
                elements.riskLevel.textContent = '데이터 없음';
            }
        }

        // 서버 동기화
        function syncToServer() {
            const API_BASE = window.API_BASE || '';
            if (!API_BASE && window.location.hostname === 'localhost') return;

            fetch(`${API_BASE}/api/v1/portfolio`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    holdings: portfolioHoldings,
                    cashKRW,
                    cashUSD
                })
            }).catch(error => {
                console.warn('서버 동기화 실패:', error);
            });
        }

        // 기존 localStorage 키 마이그레이션
        function migrateOldData() {
            // 기존 cashKRW/cashUSD 키 체크
            const oldCashKRW = localStorage.getItem('cashKRW');
            const oldCashUSD = localStorage.getItem('cashUSD');

            if (oldCashKRW && !localStorage.getItem('cashKrw')) {
                localStorage.setItem('cashKrw', oldCashKRW);
                localStorage.removeItem('cashKRW');
            }

            if (oldCashUSD && !localStorage.getItem('cashUsd')) {
                localStorage.setItem('cashUsd', oldCashUSD);
                localStorage.removeItem('cashUSD');
            }
        }

        // 데이터 로드 수정
        // 대체된 loadPortfolioData 함수는 위에 이미 정의됨

        // 1초마다 다음 체크 시간 업데이트
        setInterval(updateNextCheckTime, 1000);
    </script>
</body>
</html><!-- ===== Cash auto-format helpers (KRW comma / USD dot) ===== -->
<script>
(function(){
  function nfKRW(n){ try{return new Intl.NumberFormat('ko-KR',{maximumFractionDigits:0}).format(n);}catch(e){return String(n)} }
  function nfUSD(n){ try{return new Intl.NumberFormat('en-US',{minimumFractionDigits:2, maximumFractionDigits:2}).format(n);}catch(e){return String(n)} }
  function sanitizeKRW(s){ const v=String(s||'').replace(/[^\d]/g,''); return v ? parseInt(v,10) : 0; }
  function sanitizeUSD(s){
    let v=String(s||'').replace(/[^\d.]/g,'');          // 숫자/점만
    const parts=v.split('.'); if(parts.length>2){ v=parts.shift()+'.'+parts.join(''); }
    return v ? parseFloat(v) : 0;
  }

  function hookCashInputs(){
    const krw=document.getElementById('cash-krw');
    const usd=document.getElementById('cash-usd');
    const save=document.getElementById('cash-save');
    if(!krw || !usd || !save) return;

    // 블러 시 보기 좋게 포맷
    krw.addEventListener('blur', ()=>{ krw.value = nfKRW(sanitizeKRW(krw.value)); });
    usd.addEventListener('blur', ()=>{ usd.value = nfUSD(sanitizeUSD(usd.value)); });

    // 저장 클릭 "캡처 단계"에서 숫자만 남기기 → 기존 저장 핸들러가 정확히 저장
    save.addEventListener('click', (ev)=>{
      const k = sanitizeKRW(krw.value);
      const u = sanitizeUSD(usd.value);
      krw.value = String(k);        // 콤마 제거한 정수
      usd.value = String(u);        // 소수점 유지 숫자
    }, true);

    // 드로어 열릴 때 초기 표시도 보기 좋게
    const cashDrawer = document.getElementById('drawer-cash');
    if(cashDrawer){
      const obs = new MutationObserver(()=>{
        if(getComputedStyle(cashDrawer).right === '0px'){ // 열린 상태
          const k = sanitizeKRW(krw.value);
          const u = sanitizeUSD(usd.value);
          krw.value = k ? nfKRW(k) : '';
          usd.value = u ? nfUSD(u) : '';
        }
      });
      obs.observe(cashDrawer,{attributes:true, attributeFilter:['class']});
    }
  }
  window.addEventListener('DOMContentLoaded', hookCashInputs);
})();
</script>
<!-- ===== /Cash auto-format ===== -->
<script>
(function(){
  function forceCashInputsAsText(){
    var krw = document.getElementById('cash-krw');
    var usd = document.getElementById('cash-usd');
    if(krw){
      krw.setAttribute('type','text');
      krw.setAttribute('inputmode','numeric');   // 모바일 숫자 키패드
      krw.setAttribute('pattern','\\d*');
    }
    if(usd){
      usd.setAttribute('type','text');
      usd.setAttribute('inputmode','decimal');
      usd.setAttribute('pattern','[0-9]*[.,]?[0-9]*');
    }
  }
  // 드로어가 열릴 때도 다시 한 번 보정
  document.addEventListener('DOMContentLoaded', forceCashInputsAsText);
  document.addEventListener('click', function(){
    // 카드 클릭으로 드로어 열렸을 때 DOM이 갱신돼도 보정되도록 재호출
    setTimeout(forceCashInputsAsText, 50);
  }, true);
})();
</script>
