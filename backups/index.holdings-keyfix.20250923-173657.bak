                <div class="cash-input-group">
                    <label class="cash-label">현금 (₩)</label>
                    <input type="number" id="cash-krw" class="cash-input" placeholder="원화 현금" step="10000">
                </div>
                <div class="cash-input-group">
                    <label class="cash-label">현금 ($)</label>
                    <input type="number" id="cash-usd" class="cash-input" placeholder="달러 현금" step="100">
